[module/xwindow]
type = internal/xwindow
label = %title:0:80:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = "  "
format-prefix-foreground = ${colors.foreground-alt}
format-prefix-underline = ${colors.splash-1}

label-layout = %layout%
label-layout-underline = ${colors.splash-1}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.splash-1}
label-indicator-underline = ${colors.splash-1}

; ><;;;;*/> MODULES/Filesystems
[module/rootfs]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{A1:thunar / & disown:}%{F#80ff72}%{F-} %free% free%{A}
label-unmounted = root not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/mexfs]
type = internal/fs
interval = 25

mount-0 = /mnt/mex

label-mounted = %{A1:thunar ~ & disown:}%{F#80ff72} mex%{F-} %free% free%{A}
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/VMfs]
type = internal/fs
interval = 25

mount-0 = /mnt/vms

label-mounted = %{A1:thunar ~/Drives/vms & disown:}%{F#80ff72} VMs%{F-} %free% free%{A}
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/datafs]
type = internal/fs
interval = 25

mount-0 = /mnt/data

label-mounted = %{A1:thunar ~/Drives/data & disown:}%{F#80ff72} Data%{F-} %free% free%{A}
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

